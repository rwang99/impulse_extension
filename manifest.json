{
  "manifest_version": 2,

  "name": "Impulse",
  "description": "Helping people be conscious of their spending habits and avoid impulse purchases.",
  "version": "0.0.1",

  "options_page": "options.html",

  "options_ui": {
    "page":"options.html",
    "chrome_style": false
  },

  "icons": {"128": "icon_128.png"},

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "dashboard.html"
  },

  "permissions": [
    "http://*/*", "https://*/*",
    "activeTab",
    "storage"
  ],

  "content_scripts":
  [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-3.2.1.min.js","script.js"],
      "run_at": "document_end",
      "css": ["bootstrap.min.css","popup.css","pacifico.css","roboto.css"]
    }
  ]

}
