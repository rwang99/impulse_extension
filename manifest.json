{
  "manifest_version": 1,

  "name": "Impulse",
  "description": "Helping people be conscious of their spending habits and avoid impulse purchases.",
  "version": "0.0.1",

  "options_page": "options.html",

  "options_ui": {
    "page":"options.html",
    "chrome_style": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "icons": {},

  "permissions": [
    "http://*/*", "https://*/*",
    "activeTab",
    "storage",
  ],

  "content_scripts": 
  [
    {
      "matches": ["*://*/*"], 
      "js": ["/jquery-3.2.1.min.js","script.js"],
      "run_at": "document_end"  
    }
  ]

}